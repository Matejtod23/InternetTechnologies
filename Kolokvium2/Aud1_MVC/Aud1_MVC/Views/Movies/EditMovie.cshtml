@model Aud1_MVC.Models.Movie
@{
    ViewBag.Title = "NewMovie";
}

<h2>Edit movie - @Model.Name </h2>

@using (Html.BeginForm("EditMovie", "Movies")) //isto kako otvaranje form tag vo html i moze 3 parametar za get baranje
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Rating)
        @Html.TextBoxFor(m => m.Rating, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DownloadUrl)
        @Html.TextBoxFor(m => m.DownloadUrl, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ImageUrl)
        @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", })
    </div>

    <button type="submit" class="vtn btn-default">Edit</button>
}

