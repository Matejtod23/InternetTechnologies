@model AudMVCBaza.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRoll";
}

<h2>Add user with this email to a role:</h2>

@using (Html.BeginForm("AddRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(z => z.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(z => z.SelectedRole, new SelectList(Model.Roles), new {@class="form-control"})
    </div>
    <button type="submit" class="btn btn-default">Save</button>
}

