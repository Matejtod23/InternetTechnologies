@model LAB1_A.Models.Event
@{
    ViewBag.Title = "NewEvent";
}

<h2>Add new Event</h2>

@using (Html.BeginForm("insertNewEvent", "Event")) //isto kako otvaranje form tag vo html i moze 3 parametar za get baranje
{
    <div class="form-group">
        @Html.LabelFor(e => e.ime)
        @Html.TextBoxFor(e => e.ime, new { @class = "form-control",})
        @Html.ValidationMessageFor(e => e.ime)
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.lokacija)
        @Html.TextBoxFor(e => e.lokacija, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.lokacija)
    </div>


    <button type="submit" class="btn btn-default">Save</button>
}

