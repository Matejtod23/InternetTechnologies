@model Doctor_Patient.Models.PatientDoctors
@{
    ViewBag.Title = "AddPatient";
}

<h2>Add Patient to @Model.Doctor.Name</h2>

@using (Html.BeginForm("AddPatientToDoctor", "Doctors", FormMethod.Post))
{
    @Html.DropDownListFor(model => model.PatientId, new SelectList(Model.Patients, "Id", "Name"))
    @Html.HiddenFor(model => model.DoctorId)

    <button type="submit" class="btn btn-primary">Save</button>
}



